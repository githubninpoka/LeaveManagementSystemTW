@model IEnumerable<LeaveManagementSystemTW.MVC.Models.LeaveTypes.LeaveTypeReadOnlyVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-warning">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
